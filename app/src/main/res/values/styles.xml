<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="bottomNavigationColor">@color/colorPrimary</item>
        <item name="itemChecked">@color/colorAccent</item>
        <item name="itemUnchecked">@color/colorDark</item>
    </style>

    <style name="DarkTheme" parent="Theme.AppCompat">
        <item name="colorPrimary">@color/darkColorPrimary</item>
        <item name="colorPrimaryDark">@color/darkColorPrimaryDark</item>
        <item name="colorAccent">@color/darkColorAccent</item>
        <item name="bottomNavigationColor">@color/darkColorPrimary</item>
        <item name="itemChecked">@color/darkColorAccent</item>
        <item name="itemUnchecked">@color/darkColorAccent</item>
    </style>

</resources>
